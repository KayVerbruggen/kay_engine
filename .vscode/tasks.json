{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g -Werror -Wall -Wclobbered -Wempty-body -Wignored-qualifiers -Wmissing-field-initializers -Wtype-limits -Wuninitialized -Wshift-negative-value",
                "${workspaceFolder}/src/*.cpp ${workspaceFolder}/src/*.c",
                "-I ${workspaceFolder}/dependencies/includes",
                "-L ${workspaceFolder}/dependencies/lib",
                "-lglfw3 -lgdi32",
                "-D GLFW_INCLUDE_NONE",
                "-o ${workspaceFolder}/build/demo"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}